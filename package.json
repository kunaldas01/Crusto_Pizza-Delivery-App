{
  "name": "crusto-monorepo",
  "version": "1.0.0",
  "description": "Crusto MERN stack application",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:workers": "concurrently \"npm run dev:price\" \"npm run dev:availability\"",
    "dev:price": "cd server && npm run dev:price",
    "dev:availability": "cd server && npm run dev:availability",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:workers\"",
    "build": "npm run install:all && npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start:server": "cd server && npm start",
    "start:price": "cd server && npm run start:price",
    "start:availability": "cd server && npm run start:availability",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "cd client && rm -rf dist node_modules",
    "clean:server": "cd server && rm -rf dist node_modules",
    "typecheck": "npm run typecheck:client && npm run typecheck:server",
    "typecheck:client": "cd client && npx tsc --noEmit",
    "typecheck:server": "cd server && npm run typecheck",
    "lint": "npm run lint:client",
    "lint:client": "cd client && npm run lint",
    "test:build": "npm run build && npm run preview",
    "preview": "cd client && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "keywords": [
    "monorepo",
    "mern",
    "react",
    "express",
    "typescript"
  ],
  "author": "Kunal",
  "license": "Apache-2.0"
}